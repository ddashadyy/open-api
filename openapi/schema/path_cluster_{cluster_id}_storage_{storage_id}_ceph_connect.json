{
  "paths": {
    "/cluster/{cluster_id}/storage/{storage_id}/ceph_connect": {
      "post": {
        "tags": [
          "cluster"
        ],
        "summary": "Connect ceph storage to cluster",
        "operationId": "ceph_storage_connect",
        "parameters": [
          {
            "name": "cluster_id",
            "in": "path",
            "description": "Cluster ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "storage_id",
            "in": "path",
            "description": "Storage ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Storage attached successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IdTaskStoragesTasks"
                }
              }
            }
          }
        }
      }
    }
  }
}
