{
  "paths": {
    "/host/{host_id}/iso/cancel": {
      "post": {
        "tags": [
          "host"
        ],
        "summary": "Disconnect ISO from VM without reinstalling",
        "operationId": "iso_cancel",
        "parameters": [
          {
            "name": "host_id",
            "in": "path",
            "description": "Host ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "ISO disconnect started successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
