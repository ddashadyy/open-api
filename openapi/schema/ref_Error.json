{
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "object",
            "properties": {
              "code": {
                "type": "integer",
                "example": 5012
              },
              "msg": {
                "type": "string",
                "example": "Disk id unknown"
              },
              "value": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "object" }
                ],
                "description": "The invalid value that caused the error"
              }
            },
            "required": ["code", "msg"]
          }
        }
      }
    }
  }
}
