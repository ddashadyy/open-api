        "parameters": [
          {
            "name": "node_id",
            "in": "path",
            "description": "Node ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "description": "Install parameters",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "force": {
                    "type": "boolean",
                    "default": false
                  }
                }
              }
            }
          },
          "required": false
        },
        "responses": {
          "200": {
            "description": "",
            "content": {
              "application/json": {
               "schema": {
                  "$ref": "#/components/schemas/IdTask"
                }
              }
            }
          }
        }
      }
    }
  }
