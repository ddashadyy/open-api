{
  "paths": {
    "/disk/{disk_id}/backup/{backup_id}": {
      "get": {
        "tags": [
          "disk",
          "backup"
        ],
        "summary": "Get disk backup info",
        "operationId": "get_disk_backup",
        "parameters": [
          {
            "name": "disk_id",
            "in": "path",
            "description": "Disk id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "backup_id",
            "in": "path",
            "description": "Backup id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Disk backup info",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DiskBackup"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "disk",
          "backup"
        ],
        "summary": "Disk backup deletion",
        "operationId": "delete_disk_backup",
        "parameters": [
          {
            "name": "disk_id",
            "in": "path",
            "description": "Disk id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "backup_id",
            "in": "path",
            "description": "Backup id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Disk backup deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/IdTask"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  }
}
