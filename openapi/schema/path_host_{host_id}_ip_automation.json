{
  "paths": {
    "/host/{host_id}/ip_automation": {
      "post": {
        "tags": [
          "host"
        ],
        "summary": "Change IP automation type",
        "operationId": "chande_host_ip_automation",
        "parameters": [
          {
            "name": "host_id",
            "in": "path",
            "description": "Host ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "description": "New IP automation type",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IpAutomationType"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "IP automation changed successfully",
            "content": {
              "application/json": {
               "schema": {
                  "$ref": "#/components/schemas/IdTask"
                }
              }
            }
          }
        }
      }
    }
  }
}
